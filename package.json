{
  "name": "petohub",
  "version": "1.0.0",
  "description": "Petohub's official website",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"cd client && npm start\"",
    "client-build": "npm run build --prefix client",
    "client-install": "npm install --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Baldeep Singh",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.8",
    "multer": "^1.4.3",
    "nodemailer": "^6.6.5"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}
